# vim: sts=2 ts=8 sw=2 tw=99 et ft=python:
import os

rvalue = {}
for cxx in builder.targets:
  lib = Extension.StaticLibrary(builder, cxx, 'version')
  lib.compiler.includes += [
    os.path.join(builder.sourcePath, 'public')
  ]
  lib.compiler.defines.remove('SMEXT_USE_VERSIONLIB')
  lib.compiler.sourcedeps += Extension.generated_headers
  lib.sources += [
    'versionlib.cpp'
  ]
  task = builder.Add(lib)

  rvalue[lib.compiler.target.arch] = task.binary
